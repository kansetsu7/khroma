<section id="home-page">
  <div class="home-bg">
    <div class="home-page-overlay"></div>  
    <div class="container">
      <div class="match-choice-panel">
        <h2 id="question1">今天想幫什麼衣服配色呢？</h2>
        <div>
          <div id="gender-choice">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-secondary active btn-warning">
                <input value="1" type="radio" name="options" id="option1" autocomplete="off"> 男
              </label>
              <label class="btn btn-secondary btn-warning">
                <input value="2" type="radio" name="options" id="option2" autocomplete="off"> 女
              </label>
            </div>
          </div>
          <div id="category-choice">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn active btn-primary">
                <input value="0" type="radio" name="options" id="option2" autocomplete="off"> 幫我的上衣搭配
              </label>
              <label class="btn btn-primary">
                <input value="1" type="radio" name="options" id="option1" autocomplete="off"> 幫我的下身搭配
              </label>
            </div>
          </div>
        </div>
        <div id="q1-choice-panel"></div>
        <h2 id="question2">想讓khroma推薦什麼款式呢？</h2>
        <div id="q2-choice-panel"></div>
        <div id="kroma-index-match">
          <%= render partial: "shared/match_btn" %>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="promote">
  <div class="container">
    <div class="promote-panel">
      <div class="promote-item">
        <div class="promote-icon">
          <%= fa_icon 'thumbs-o-up' %>
        </div>
        <div class="promote-text">
          <h6>全台第一家衣服比價網！</h6>
          <p>擁有6000筆即時資訊</p>
        </div>
      </div>
      <div class="promote-item" style="justify-self: center">
        <div class="promote-icon">
          <%= fa_icon 'check-circle-o', style: "font-size: 38px;" %>
        </div>
        <div class="promote-text">
          <h6>Khroma專業配色，您安心！</h6>
          <p>依照您的喜好，給您最時尚的推薦</p>
        </div>
      </div>
      <div class="promote-item" style="justify-self: end">
        <div class="promote-icon"> 
          <%= fa_icon 'heart-o' %>
        </div>
        <div class="promote-text">
          <h6>個人化追蹤系統</h6>
          <p>幫您收藏喜愛商品，購物沒壓力</p>
        </div>
      </div>
    </div>
  </div>
</section>
<section id='match'>
</section>
<section id="match-result">
  <div class="container">
    <div id="match-result-panel">
    </div>
  </div>
</section>