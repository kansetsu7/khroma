<section id="home-page">
  <div class="home-bg">
    <div class="home-page-overlay"></div>  
      <div class="container">
        <div class="match-choice-panel">
          <h2 id="question1">今天想幫什麼衣服配色呢？</h2>
          <div>
            <div id="gender-choice">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-secondary active btn-warning">
                  <input value="2" type="radio" name="options" id="option2" autocomplete="off"> 女
                </label>
                <label class="btn btn-secondary btn-warning">
                  <input value="1" type="radio" name="options" id="option1" autocomplete="off"> 男
                </label>
              </div>
            </div>
            <div id="category-choice">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn active btn-primary">
                  <input value="0" type="radio" name="options" id="option2" autocomplete="off"> 幫我的上衣搭配
                </label>
                <label class="btn btn-primary">
                  <input value="1" type="radio" name="options" id="option1" autocomplete="off"> 幫我的下身搭配
                </label>
              </div>
            </div>
          </div>
          <div id="q1-choice-panel">
          </div>
          <h2 id="question2">想讓khroma推薦什麼款式呢？</h2>
          <div id="q2-choice-panel">
          </div>
          <div id="kroma-index-match">
            <%= render partial: "shared/match_btn" %>
          </div>
        </div>
